

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h3><%= @book.errors.count %> error prohibited this book from being saved:</h3>
 
    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
<div class="field row">
  <h4>Title</h4>
  <%= f.text_field :title, class: "col-xs-12" %>
</div>
  <h4>Opinion</h4>
<div class="field row">
  <%= f.text_area :body, class: "col-xs-12" %>
</div>
<div class="actions row">
  <br><%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %></br>
</div>
<% end %>

<td>
<%= link_to "Show", book_path %>
</td>
|
<td><%= link_to "Back", books_path %></td>
    </div>
  </div>
</div>