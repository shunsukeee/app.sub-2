<div class="container">
  <div class="row">
    <div class="col-md-3">

		<% if flash[:notice] %>
		  <p><%= flash[:notice] %></p>
		<% end %>

		<div>
		<h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size:'100x100' %>
      <table class="table table-striped">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
      </table>
      <div><div><%= link_to edit_user_path(current_user) do%><i class="glyphicon glyphicon-wrench"></i><% end %></div></div>

      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
      <div>
          <label>Title</label>
          <div><%= f.text_field :title %></div>
      </div>
      <div>
          <label>Opinion</label>
          <div><%= f.text_area :body %></div>
      </div>

          <div><%= f.submit 'Create Book' %></div>

      <% end %>
      </div>
    </div>
	<div class="col-md-9">
		<h2>Book detail</h2>
		<table class="table">
			<tbody>
				<tr>
					<td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size:'100x100' %><br><%= @user.name %></td>

		<td><%= @book.title %></td>
		<td><%= @book.body %></td>

		<td>
		<%= link_to "Edit", edit_book_path %>
		</td>

		<td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
	</tr>
</tbody>
</table>

	</div>
  </div>
</div>
