<tbody>
	<th>
		<tr>name</tr>
		<tr><%= @user.name %></tr>
	</th>
	<th>
		<tr>introduction</tr>
		<tr><%= @user.introduction %></tr>
	</th>
</tbody>
<div><%= link_to 'edit', edit_user_path(current_user) %></div>

<h2>New book</h2>
<%= form_for(@book2) do |f| %>
