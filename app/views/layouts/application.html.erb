<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <meta charset="utf-8">
  <%= csrf_meta_tag %>
  <title>Bookers</title>
</head>
<body>
  <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <nav class="nav navbar-nav navbar-left">
        <span>Bookers</span>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li>
            <%= link_to user_path(current_user) do%><i class="glyphicon glyphicon-home"></i> Home<% end %>
          </li>
          <li><%= link_to users_path do%><i class="glyphicon glyphicon-user"></i> Users<% end %>
          </li>
          <li>
            <%= link_to books_path do%><i class="glyphicon glyphicon-book"></i> Books<% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do%><i class="glyphicon glyphicon-log-out"></i> logout<% end %>
          </li>
          <% else %>
          <li>
            <%= link_to root_path do%><i class="glyphicon glyphicon-home"></i> Home<% end %>
          </li>
          <li>
            <%= link_to home_about_path do%><i class="glyphicon glyphicon-link"></i> About<% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path do%><i class="glyphicon glyphicon-edit"></i> sign up<% end %>
          </li>
          <li>
            <%= link_to new_user_session_path do%><i class="glyphicon glyphicon-log-in"></i> login<% end %>
          </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </header>
<%= yield %>
<footer>
  <div class="container">
  <div class="row">
    
    <div class="col-xs-3 col-xs-offset-9">

              <p>CopyRight Infratop.inc</p>
            </div>
          </div>
        </div>
        </footer>

</body>
</html>
