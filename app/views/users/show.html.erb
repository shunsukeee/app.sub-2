<h2>User info</h2>
<div><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size:'100x100',class: "img-circle pull-left profile-img" %></div>

<tbody>

	<th>
		<tr>name</tr>
		<tr><%= @user.name %></tr>
	</th>
	<th>
		<tr>introduction</tr>
		<tr><%= @user.introduction %></tr>
	</th>
</tbody>
<div><%= link_to 'edit', edit_user_path %></div>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>

<h2>Books</h2>
<table>
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th></th>
		</tr>
	</thead>

<tbody>
	<% @books.each do |book| %>
	<tr>
		<td></td>
		<td></td>
		<td><%= book.body %></td>
	</tr>
	<% end %>
</tbody>
</table>

