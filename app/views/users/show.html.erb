<% if flash[:notice] %>
			  <p><%= flash[:notice] %></p>
			<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size:'100x100' %>
      <table class="table table-striped">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
      </table>
      <div><%= link_to edit_user_path(current_user) do%><i class="glyphicon glyphicon-wrench"></i><% end %></div>

      <h2>New book</h2>
      <%= form_for(@book) do |f| %>
      <div>
          <label>Title</label>
          <div><%= f.text_field :title %></div>
      </div>
      <div>
          <label>Opinion</label>
          <div><%= f.text_area :body %></div>
      </div>

          <div><%= f.submit 'Create Book' %></div>

      <% end %>
      </div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th></th>
					</tr>
				</thead>

			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size:'40x40' %></td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
			</table>
		</div>
	</div>
</div>

