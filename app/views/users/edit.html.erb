<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
<h2>User info</h2>

<%= form_for(@user) do |f| %>
    <div class="field">
        <label>Name</label>
        <%= f.text_field :name %>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="form-group has-icon">
    <label>Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>
    <div>
    	<label>Introduction</label>
    	<%= f.text_area :introduction %>
    </div>
    <%= f.submit "Update User" %>

<% end %>